<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Homework_11_CustomTable.Controls"
		x:DataType="controls:TableControl">
  <Design.PreviewWith>
    <controls:TableControl />
  </Design.PreviewWith>

  <Style Selector="controls|TableControl">
    <Setter Property="Template">
      <ControlTemplate>
		  <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
			  <ContentPresenter Content="{Binding DataContext.Content}" />
		  </StackPanel>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
