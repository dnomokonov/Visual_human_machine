<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Homework_4_Explorer.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		Width="700"
		Height="500"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Homework_4_Explorer.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Homework_4_Explorer">

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<ListBox ItemsSource="{Binding Explorer.Directories}" SelectedItem="{Binding Explorer.SelectedDir}">
		<ListBox.ItemTemplate>
			<DataTemplate>
				<StackPanel Orientation="Horizontal">
					<Image Source="{Binding ImagePath}" Width="20" Height="20" Margin="0 0 10 0"/>
					<TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
				</StackPanel>
			</DataTemplate>
		</ListBox.ItemTemplate>
	</ListBox>

</Window>